@page "/contact"
@using MudBlazor

<PageTitle>Contact</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
    <MudPaper Class="p-4" Elevation="4">
        <MudText Typo="Typo.h3" GutterBottom="true" Align="Align.Center">Contact Information</MudText>
        <MudDivider Class="mb-4" />
        <MudGrid Spacing="3" Justify="Justify.Center" Class="mt-4">
            <MudStack Justify="Justify.Center">
                <MudCard Class="mb-4" Elevation="2">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" GutterBottom="true">Name</MudText>
                        <MudText Typo="Typo.body1">Md. Washim Akram</MudText>
                    </MudCardContent>
                </MudCard>
                <MudCard Class="mb-4" Elevation="2">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" GutterBottom="true">Email</MudText>
                        <MudText Typo="Typo.body1">ws.akram330@gmail.com</MudText>
                    </MudCardContent>
                </MudCard>
            </MudStack>
        </MudGrid>
    </MudPaper>
</MudContainer>

